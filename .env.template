# YMC POS Environment Variables Template
# Copy this file to .env and fill in your actual values

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# GoHighLevel (GHL) Configuration
GHL_CLIENT_ID=your_ghl_client_id
GHL_CLIENT_SECRET=your_ghl_client_secret
GHL_REDIRECT_URI=http://localhost:5000/oauth/callback
GHL_LOCATION_ID=your_ghl_location_id
GHL_BASE_URL=https://services.leadconnectorhq.com

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ymc-pos

# Email Configuration for Stock Alerts
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASS=your-app-specific-password
ALERT_EMAIL=manager@ymcommunity.com

# Server Configuration
PORT=5000
FRONTEND_URL=http://localhost:3000

# Email Setup Instructions:
# 1. Use Gmail or your preferred email service
# 2. Enable 2-factor authentication on your Gmail account
# 3. Generate an "App Password" specifically for this application
# 4. Use the app password (not your regular password) for EMAIL_PASS
# 5. Set ALERT_EMAIL to the email address that should receive low stock alerts
#
# Gmail App Password Setup:
# - Go to Google Account settings
# - Security → 2-Step Verification → App passwords
# - Generate password for "Mail"
# - Use this 16-character password for EMAIL_PASS

# Stock Alert Configuration
LOW_STOCK_THRESHOLD=20
